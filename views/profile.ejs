<%- include('partials/header') %>
    <section class="min-vh-100 bg-light" id="profile">
      <div class="container py-5">
        <div class="row justify-content-center">
          <div class="col-12 col-lg-8 col-xl-6">
            <div class="card shadow-sm border-0">
              <div class="card-body p-4 p-md-5">
                <div class="d-flex align-items-center gap-3 mb-3">
                  <div class="brand-logo">MR</div>
                  <div>
                    <h1 class="h4 mb-1">Your Profile</h1>
                    <p class="text-secondary mb-0">Manage your account details</p>
                  </div>
                </div>

                <div class="row g-3">
                  <div class="col-12">
                    <label class="form-label text-muted">Signed in as</label>
                    <div class="form-control bg-body-tertiary" readonly><%= locals.email || 'Unknown' %></div>
                  </div>
                </div>

                <div class="d-flex gap-2 mt-4">
                  <a href="/" class="btn btn-outline-secondary">Back to Home</a>
                  <a href="/api/auth/logout" class="btn btn-danger">Logout</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
<%- include('partials/footer') %>
