<%- include('partials/header') %>
    <section class="min-vh-100 bg-light" id="profile">
      <div class="container py-5">
        <div class="row justify-content-center">
          <div class="col-12 col-lg-8 col-xl-6">
            <div class="card shadow-sm border-0">
              <div class="card-body p-4 p-md-5">
                <div class="d-flex align-items-center justify-content-between mb-3">
                  <div class="d-flex align-items-center gap-3">
                  <div class="brand-logo">MR</div>
                  <div>
                    <h1 class="h4 mb-1">Your Profile</h1>
                    <p class="text-secondary mb-0">Manage your account details</p>
                  </div>
                  </div>
                  <span class="badge text-bg-primary">Account</span>
                </div>

                <div class="row g-3">
                  <div class="col-12">
                    <label class="form-label text-muted">Signed in as</label>
                    <div class="form-control bg-body-tertiary d-flex align-items-center" readonly>
                      <i class="bi bi-envelope me-2 text-secondary"></i>
                      <%= locals.email || 'Unknown' %>
                    </div>
                  </div>
                </div>

                <div class="d-flex gap-2 mt-4">
                  <a href="/" class="btn btn-outline-secondary"><i class="bi bi-house me-1"></i>Back to Home</a>
                  <a href="/api/auth/logout" class="btn btn-danger"><i class="bi bi-box-arrow-right me-1"></i>Logout</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
<%- include('partials/footer') %>
